{
  "name": "speedread",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.3.4",
  "author": {
    "name": "cmf",
    "email": "cmf@local"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "typecheck": "bun run typecheck:web && bun run typecheck:electron",
    "typecheck:web": "tsc --noEmit -p tsconfig.json",
    "typecheck:electron": "tsc --noEmit -p tsconfig.electron.json",
    "build": "bun run typecheck && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "verify": "bun run lint && bun run test:run && bun run build",
    "verify:ci": "bun run lint && bun run test:coverage && bun run build",
    "electron:dev": "ELECTRON=true vite",
    "electron:build": "bun run typecheck:electron && ELECTRON=true vite build && electron-builder",
    "electron:preview": "electron dist-electron/main.js",
    "tauri:dev": "cargo tauri dev --config src-tauri/tauri.conf.json",
    "tauri:build": "cargo tauri build --config src-tauri/tauri.conf.json",
    "tauri:check": "cargo check --manifest-path src-tauri/Cargo.toml",
    "fixtures:tokenizer": "bun run scripts/generate-tokenizer-fixtures.ts"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "epub": "^1.3.0",
    "jsdom": "^27.4.0",
    "pdf-parse": "^2.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "39.2.7",
    "electron-builder": "26.5.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^15.15.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.17"
  }
}
